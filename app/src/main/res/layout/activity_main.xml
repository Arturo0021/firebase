<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/black"
    android:fillViewport="false">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grisclaro"
            android:id="@+id/layout_title"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titulo"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="TITULO 1"/>

        </LinearLayout>

        <ListView
            android:id="@+id/asistencia_gral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/view_0"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#000"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grisclaro"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titulo2"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="TITULO 2"/>

        </LinearLayout>

        <ListView
            android:id="@+id/list_gral"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#000"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grisclaro"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titulo3"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="TITULO 3"/>

        </LinearLayout>

        <ListView
            android:id="@+id/list_gra2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/view_2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#000"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="15dp"
            android:background="@color/grisclaro"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titulo4"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="TITULO 4"/>

        </LinearLayout>

        <ListView
            android:id="@+id/list_gra3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <View
            android:id="@+id/view_3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#000"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</ScrollView>