<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="CADENA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SUCURSAL"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FOLIO"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="PROMOTOR"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="USUARIO"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FECHA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SALIDA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="TRAYECTORIA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_texto1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="CADENA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_texto2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SUCURSAL"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_texto3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FOLIO"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_texto4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="PROMOTOR"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_texto5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="USUARIO"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_texto6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FECHA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_texto7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="SALIDA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/txt_texto8"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="TRAYECTORIA"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/view_color_sos"
        android:background="#000"
        android:layout_marginTop="10dp"/>

</LinearLayout>